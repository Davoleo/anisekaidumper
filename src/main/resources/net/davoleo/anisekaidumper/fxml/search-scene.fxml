<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.davoleo.anisekaidumper.controller.SearchController">
   <children>
      <HBox>
         <children>
            <TextField fx:id="searchField" onAction="#search" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false">
               <graphic>
                  <FontIcon iconLiteral="mdi2m-magnify" iconSize="20" strokeType="OUTSIDE" strokeWidth="0.0" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <ScrollPane fitToWidth="true">
            <FlowPane fx:id="searchResultList" VBox.vgrow="ALWAYS" alignment="TOP_CENTER" />
      </ScrollPane>
   </children>
</VBox>
